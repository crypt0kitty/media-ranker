<body>
  <main>
    <h2><%=@work.title %></h2>
    <p>Created by: <%= @work.creator %> </p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description%></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class: "btn btn-primary"%>
      <%=link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary"%>
      <%= link_to "Upvote", votes_path(work_id: @work.id), method: :post, class: "btn btn-primary"%>
      <%=link_to "Delete", destroy_work_path(@work.id), class: "btn btn-primary", method: :delete, data: {confirm: 'Are you sure?'}%>
    </section>
  <section class="works-votes__container">
    <h3 class="works-votes__header"><%=@vote %> Votes for this </h3>
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
      </ul>
  </section>
  </main>

